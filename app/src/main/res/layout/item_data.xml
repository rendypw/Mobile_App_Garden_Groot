<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="3pt"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2pt"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140px"
                android:layout_height="wrap_content"
                android:text="ID Tanaman"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_idtnmn"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:text="Ukuran Pot"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ukpot"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:text="Jenis Tanaman"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_jenis"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:text="Harga "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_harga"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:text="Stok Tanaman"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_stok"/>
    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btn_update"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_marginTop="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/btn_master"
                android:drawableTop="@drawable/ic_update"
                android:backgroundTint="@null"
                android:indeterminate="false"
                android:onClick="onclick"
                android:padding="1dp"
                android:textStyle="bold"
                tools:ignore="OnClick" />
            <Button
                android:id="@+id/btn_delete"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="5px"
                android:background="@drawable/btn_master"
                android:drawableTop="@drawable/ic_delete"
                android:backgroundTint="@null"
                android:indeterminate="false"
                android:onClick="onclick"
                android:padding="1dp"
                android:textStyle="bold"
                tools:ignore="OnClick" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>